<UserControl x:Class="Caliburn.Light.Gallery.WPF.Hierarchies.HierarchiesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="https://github.com/tibel/Caliburn.Light/"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Caliburn.Light.Gallery.WPF.Hierarchies"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        d:DataContext="{d:DesignInstance Type=local:HierarchiesViewModel, IsDesignTimeCreatable=True}"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800">
    <ContentControl HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    DataContext="{Binding ActiveItem, Mode=OneWay}"
                    cal:View.Create="True" />
</UserControl>
