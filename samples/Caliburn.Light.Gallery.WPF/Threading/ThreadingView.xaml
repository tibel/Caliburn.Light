<UserControl x:Class="Caliburn.Light.Gallery.WPF.Threading.ThreadingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <Button Content="Execute"
                Command="{Binding ExecuteCommand, Mode=OneTime}"
                Padding="10"
                Margin="10" />

        <Button Content="SwitchTo"
                Command="{Binding UIContextRunCommand, Mode=OneTime}"
                Padding="10"
                Margin="10" />
        
        <Button Content="ConfigureAwait(false)"
                Command="{Binding TaskRunCommand, Mode=OneTime}"
                Padding="10"
                Margin="10" />
        
        <Button Content="ConfigureAwait(true)"
                Command="{Binding AsyncCommand, Mode=OneTime}"
                Padding="10"
                Margin="10" />
    </StackPanel>
</UserControl>
