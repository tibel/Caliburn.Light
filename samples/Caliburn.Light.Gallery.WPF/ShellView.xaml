<Window x:Class="Caliburn.Light.Gallery.WPF.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="https://github.com/tibel/Caliburn.Light/"
        xmlns:local="clr-namespace:Caliburn.Light.Gallery.WPF"
        Title="{Binding DisplayName, Mode=OneWay}"
        Width="640"
        Height="480">
    <DockPanel>
        <Border DockPanel.Dock="Top"
                BorderThickness="0,0,0,2"
                BorderBrush="LightBlue"
                Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button Content="Home"
                    Margin="0,0,10,0"
                    Command="{Binding HomeCommand, Mode=OneTime}" />

                <TextBlock Text="{Binding ActiveItem.DisplayName}"
                       VerticalAlignment="Center" />
            </StackPanel>
        </Border>

        <ContentControl DataContext="{Binding ActiveItem}"
                        cal:View.Create="True" />
    </DockPanel>
</Window>
