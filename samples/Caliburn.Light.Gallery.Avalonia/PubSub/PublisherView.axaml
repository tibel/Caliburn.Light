<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="using:Caliburn.Light.Gallery.Avalonia.PubSub"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Class="Caliburn.Light.Gallery.Avalonia.PubSub.PublisherView"
             x:DataType="local:PublisherViewModel">
    <StackPanel>
        <TextBox Text="{Binding Message, Mode=TwoWay}" />

        <Button Content="Publish"
                Command="{Binding PublishCommand, Mode=OneTime}" />
    </StackPanel>
</UserControl>
