<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cal="https://github.com/tibel/Caliburn.Light/"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="using:Caliburn.Light.Gallery.Avalonia.PubSub"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Class="Caliburn.Light.Gallery.Avalonia.PubSub.PubSubView"
             x:DataType="local:PubSubViewModel">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <local:PublisherView Grid.Column="0"
                             DataContext="{Binding Publisher, Mode=OneWay}"
                             cal:View.Bind="True" />

        <local:SubscriberView Grid.Column="1"
                              DataContext="{Binding Subscriber, Mode=OneWay}"
                              cal:View.Bind="True" />
    </Grid>
</UserControl>
