<Page
    x:Class="Demo.HelloSpecialValues.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="using:Caliburn.Light.WinUI"
    xmlns:local="using:Demo.HelloSpecialValues"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <GridView ItemsSource="{x:Bind Model.Characters}"
                  SelectionMode="None"
                  IsSwipeEnabled="False"
                  IsItemClickEnabled="True"
                  Margin="20"
                  ItemClick="{x:Bind Model.CharacterSelectedCommand.OnEvent}">
            <cal:Bind.CommandParameter>
                <local:ClickedItem />
            </cal:Bind.CommandParameter>
            
            <GridView.ItemTemplate>
                <DataTemplate>
                    <local:CharacterView cal:Bind.DataContext="True" />
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>
