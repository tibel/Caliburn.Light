<UserControl x:Class="Caliburn.Light.Gallery.WinUI.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="using:Caliburn.Light.WinUI"
        xmlns:local="using:Caliburn.Light.Gallery.WinUI">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0"
                BorderThickness="0,0,0,2"
                BorderBrush="LightBlue"
                Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button Content="Home"
                        Margin="0,0,10,0"
                        Command="{x:Bind Model.Entity.HomeCommand, Mode=OneTime}" />

                <TextBlock Text="{x:Bind Model.Entity.ActiveItem.DisplayName, Mode=OneWay}"
                           VerticalAlignment="Center" />
            </StackPanel>
        </Border>

        <ContentControl Grid.Row="1"
                        DataContext="{x:Bind Model.Entity.ActiveItem, Mode=OneWay}"
                        cal:View.Create="True" />
    </Grid>
</UserControl>
